---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    image?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, image },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <section class="flex flex-col items-center p-6 max-w-4xl mx-auto">
        {image && <img class="h-64 mb-4" src={image} alt="" />}
        <h1 class="text-3xl font-bold text-center">{title}</h1>
        {
          pubDate && (
            <time class="mt-2 text-center text-neutral-700">{pubDate}</time>
          )
        }
      </section>
      <article class="container mx-auto px-12 max-w-4xl prose mb-6">
        <hr />
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
