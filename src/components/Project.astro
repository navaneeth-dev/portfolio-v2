---
const { name, description, image } = Astro.props;
---

<div class="flex flex-col gap-y-2">
  <div
    class="h-32 bg-neutral-400 rounded-lg border-2 border-black shadow-lg hover:scale-110"
  >
    <img
      src={image}
      alt="Project img"
      class="object-cover w-full h-full rounded-lg"
    />
  </div>
  <h3 class="text-primary font-bold text-lx mt-2">{name}</h3>
  <p>{description}</p>
</div>
