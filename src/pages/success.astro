---
import BaseLayout from "../layouts/BaseLayout.astro";
import {BadgeCheck} from "lucide-react";
---

<BaseLayout>
  <div class="text-center items-center flex flex-col">
    <span class="text-black">
      <BadgeCheck size={64}/>
    </span>
    <h1 class="flex items-center justify-center gap-2 ">
      Message sent
    </h1>
    <p>Successfully sent the message, expect an email within 24-48 hours.</p>
  </div>
</BaseLayout>
