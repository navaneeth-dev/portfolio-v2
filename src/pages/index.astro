---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import LockPic from "../../public/Lock-dynamic-premium.png";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />

    <!-- Hero -->
    <main class="relative overflow-hidden border-b border-black">
      <div
        class="container px-12 max-w-4xl mx-auto flex justify-around items-center"
      >
        <div class="flex flex-1 flex-col gap-y-4">
          <h1 class="text-3xl">
            Hi, my name is<br /><span class="font-bold">Navaneeth</span>
          </h1>
          <p>
            I&lsquo;m a <span class="font-bold">security researcher</span> studying
            BCA from Chennai
          </p>
          <button
            class="bg-primary text-white px-3 py-1 border border-black self-start"
            >Get in touch</button
          >
        </div>
        <div class="flex-1 flex justify-center">
          <img src={LockPic} alt="" class="max-h-80 z-10" />
        </div>
      </div>
      <!-- Transformed rectangle -->
      <div
        class="overflow-hidden bg-primary w-[55vw] h-[55vw] absolute -right-2 top-1/2 rotate-45 -translate-y-1/2 translate-x-1/2"
      >
      </div>
    </main>

    <!-- s -->
    <Footer />
  </body>
</html>
